
generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Tasks {
  id          String   @id
  
  title       String
  description String?
  isCompleted Boolean  @default(false)

  deletedAt   DateTime? 
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}